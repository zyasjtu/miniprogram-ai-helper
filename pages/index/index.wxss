.container {
    height: 100vh;
    display: flex;
    flex-direction: column;
    padding: 20rpx;
    box-sizing: border-box;
  }
  
  /* 顶部标题样式 */
  .header {
    text-align: center;
    padding: 20rpx 0;
    margin-bottom: 20rpx;
  }
  
  .title {
    display: block;
    font-size: 40rpx;
    font-weight: bold;
    color: #00ffff;
    text-shadow: 0 0 10rpx rgba(0, 255, 255, 0.5);
    margin-bottom: 10rpx;
  }
  
  .subtitle {
    font-size: 24rpx;
    color: #a0a0ff;
  }
  
  /* 聊天历史区域 */
  .chat-container {
    flex: 1;
    width: 100%;
    margin-bottom: 20rpx;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 20rpx;
    padding: 20rpx;
    box-sizing: border-box;
    backdrop-filter: blur(10rpx);
  }
  
  .chat-history {
    min-height: 100%;
  }
  
  /* 消息样式 */
  .message-item {
    margin-bottom: 30rpx;
    animation: fadeIn 0.3s ease-in;
  }
  
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20rpx); }
    to { opacity: 1; transform: translateY(0); }
  }
  
  .user-message {
    text-align: right;
  }
  
  .ai-message {
    text-align: left;
  }
  
  .message-content {
    display: inline-block;
    max-width: 80%;
    padding: 20rpx 30rpx;
    border-radius: 30rpx;
    position: relative;
  }
  
  .user-message .message-content {
    background: linear-gradient(135deg, #00ffff, #0088ff);
    color: #000000;
    border-bottom-right-radius: 5rpx;
  }
  
  .ai-message .message-content {
    background: rgba(255, 255, 255, 0.1);
    color: #ffffff;
    border-bottom-left-radius: 5rpx;
    backdrop-filter: blur(10rpx);
    border: 1rpx solid rgba(255, 255, 255, 0.1);
  }
  
  .message-text {
    display: block;
    font-size: 28rpx;
    line-height: 1.4;
    word-wrap: break-word;
  }
  
  /* 音频播放器 */
  .audio-player {
    margin-top: 15rpx;
  }
  
  .play-btn {
    background: rgba(0, 255, 255, 0.2);
    color: #00ffff;
    border: 1rpx solid rgba(0, 255, 255, 0.3);
    border-radius: 15rpx;
    font-size: 24rpx;
    padding: 10rpx 20rpx;
    margin: 0;
  }
  
  .play-btn::after {
    border: none;
  }
  
  /* 输入区域 */
  .input-container {
    width: 100%;
    background: rgba(255, 255, 255, 0.08);
    border-radius: 25rpx;
    padding: 20rpx;
    backdrop-filter: blur(10rpx);
    border: 1rpx solid rgba(255, 255, 255, 0.1);
  }
  
  .text-input {
    width: 100%;
    background: rgba(0, 0, 0, 0.3);
    border: 1rpx solid rgba(255, 255, 255, 0.1);
    border-radius: 15rpx;
    padding: 20rpx;
    color: #ffffff;
    font-size: 28rpx;
    min-height: 80rpx;
    box-sizing: border-box;
    margin-bottom: 20rpx;
  }
  
  .text-input:focus {
    border-color: rgba(0, 255, 255, 0.5);
    outline: none;
  }
  
  .button-group {
    display: flex;
    gap: 20rpx;
  }
  
  .send-btn, .record-btn {
    flex: 1;
    height: 80rpx;
    border-radius: 15rpx;
    font-size: 28rpx;
    font-weight: bold;
    display: flex;
    align-items: center;
    justify-content: center;
    border: none;
  }
  
  .send-btn {
    background: linear-gradient(135deg, #00ffff, #0088ff);
    color: #000000;
  }
  
  .send-btn[disabled] {
    background: rgba(255, 255, 255, 0.2);
    color: rgba(255, 255, 255, 0.5);
  }
  
  .record-btn {
    background: rgba(255, 255, 255, 0.1);
    color: #ffffff;
    border: 1rpx solid rgba(255, 255, 255, 0.2);
  }
  
  .record-btn.recording {
    background: linear-gradient(135deg, #ff4081, #f50057);
    color: #ffffff;
    animation: pulse 1s infinite;
  }
  
  @keyframes pulse {
    0% { box-shadow: 0 0 0 0 rgba(255, 64, 129, 0.4); }
    70% { box-shadow: 0 0 0 20rpx rgba(255, 64, 129, 0); }
    100% { box-shadow: 0 0 0 0 rgba(255, 64, 129, 0); }
  }
  
  /* 按钮点击效果 */
  button::after {
    border: none;
  }
  
  button:active {
    transform: scale(0.98);
    opacity: 0.8;
  }
